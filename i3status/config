# vim: ft=conf

general {
    colors = true
    interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "battery 1"
order += "tztime local"

# I use empty strings for format_down, because I don't like seeing
# things that don't apply

ipv6 {
    format_up = "I6: %ip"
    format_down = ""
}

wireless _first_ {
    format_up = "W: %ip"
    format_down = ""
}

ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = ""
}

battery 0 {
    format = "%status0 %percentage"
    format_down = ""
}

battery 1 {
    format = "%status1 %percentage"
    format_down = ""
}

tztime local {
    format = "%R %F"
}
