# vim: ft=conf

general {
    colors = true
    interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
# TODO: Add this when https://github.com/i3/i3status/pull/345 gets merged
# order += "volume capture"
order += "tztime local"

# I use empty strings for format_down, because I don't like seeing
# things that don't apply

ipv6 {
    format_up = "I6: %ip"
    format_down = ""
}

wireless _first_ {
    format_up = "W: %ip"
    format_down = ""
}

ethernet _first_ {
    format_up = "E: %ip"
    format_down = ""
}

battery all {
    format = "%status: %percentage (%remaining %consumption)"
    format_down = ""
}

volume master {
    format = "V: %volume"
    format_muted = "V: muted (%volume)"
    # device = "pulse:sink"
}

volume capture {
    format = "M: %volume"
    format_muted = "M: muted (%volume)"
    # device = "pulse:source"
}

tztime local {
    format = "%R %F"
}
