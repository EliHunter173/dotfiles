help man
o _easy_open

# Override shell defaults
time /usr/bin/time # /usr/bin/time is standard across shells and more feature rich

# New/Better Defaults
# Pretty grep
grepp grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn} --line-number --with-filename --context=1
l. ls -ld .*

# Safe remove
rmm /bin/rm
rm ~/.scripts/safe-rm.sh

# Basic Git
ga git add --verbose
gc git commit -v -S
gc! git commit -v -S --amend
gca git commit -v -S -a
gca! git commit -v -S -a --amend
gaa git add --all --verbose
gcl git clone --recurse-submodules
gl git pull
gp git push
gpd git push --dry-run
gst git status
grm git rm
glog git log
gd git diff
gf git fetch
grh git reset HEAD
grhh git reset HEAD --hard

# Git remotes
gr git remote

# Branching Git
gb git branch
gbd git branch -d
gco git checkout
gcb git checkout -b
gcm git checkout master
gm git merge
gmum git merge upstream/master

# Git stash
gsta git stash save
gstaa git stash apply
gstall git stash --all
gstc git stash clear
gstd git stash drop
gstl git stash list
gstp git stash pop
gsts git stash show --text

