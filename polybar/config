; vim: filetype=dosini

include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/modules.ini

[bar/top]
; polybar automatically figures out the right thing to do
; monitor = ${env:MAIN_MONITOR:eDP1}

; width = 1920
; height = 24
; radius = 0.0
; fixed-center = true

; False = Your WM will configure the window.
; True = Your WM will not to configure the window. This to detaches the bar if your WM is locking
; its size/position.
override-redirect = false

; Tells i3 to display over the bar in fullscreen.
; wm-restack = i3

background = ${colors.base01}
foreground = ${colors.base05}

; Under-/overline pixel size and argb color
; Individual values can be defined using:
;   {overline,underline}-size
;   {overline,underline}-color
line-size = 2

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding = 1

; Number of spaces to add before/after each module
module-margin = 1

; The separator will be inserted between the output of each module
separator = |

; Fonts are defined using <font-name>;<vertical-offset>
; Font names are specified using a fontconfig pattern.
font-0 = "monospace:size=10;2.0"

; Modules are added to one of the available blocks
modules-left = i3 ewmh
modules-center =
modules-right = backlight pulseaudio wired-network wireless-network battery0 battery1 datetime

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
;   none
tray-position = none
tray-padding = 0
