# BEGIN Oh-my-zsh settings
# Path to your oh-my-zsh installation.
export ZSH="/home/eli/.config/oh-my-zsh"

# Case-sensitive completion must be off. _ and - will be interchangeable.
HYPHEN_INSENSITIVE="true"

source $ZSH/oh-my-zsh.sh
# END Oh-my-zsh settings

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

source ~/.bookmarks.zsh
source ~/.aliases.zsh
source ~/.functions

# My custom scripts
export PATH=$PATH:$HOME/.scripts

# Install antibody if it's not already installed
if [[ -d "/usr/local/bin/antibody" ]]; then
    curl -sL git.io/antibody | sh -s
fi

# Load the static antibody plugin install file
source ~/.zsh_plugins.sh

# Better history searching keys
# Ctrl P and Ctrl N
bindkey '^P' history-substring-search-up
bindkey '^N' history-substring-search-down
# Vi mode keys
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down

# Load pure prompt
autoload -U promptinit; promptinit
# prompt pure
