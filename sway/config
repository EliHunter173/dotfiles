# vim: ft=i3config

# Common keybindings
set $mod Mod4
set $alt Mod1
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

font pango:Hack 10

# We need to daemonize so swayidle can appropriately suspend after awhile
set $lock swaylock --daemonize

output * bg ~/Pictures/wallpaper.png fill
# Hide the cursor in all seats after 5 seconds
seat * hide_cursor 5000

# If a window requests focus, just mark it as urgent because I have a
# keybinding for focusing urgent windows
focus_on_window_activation urgent

hide_edge_borders both

# If a window requests focus, just mark it as urgent because I have a
# keybinding for focusing urgent windows
focus_on_window_activation urgent

# Autostart
    exec mako
    exec nm-applet
    exec blueman-applet
    exec xss-lock --transfer-sleep-lock -- $lock
    exec swayidle -w \
        timeout 300 '$lock' \
        timeout 900 'systemctl suspend' \
        before-sleep '$lock' \

# Launcher
    # Kill focused window
    bindsym $mod+q kill
    # Middle click on window kills it
    bindsym button2 kill

    # Launch apps
    bindsym $mod+Return exec j4-dmenu-desktop --dmenu="bemenu --ignorecase --prompt 'launch'" --term="alacritty" | xargs swaymsg exec --
    bindsym $mod+Shift+Return exec bemenu --prompt 'run' < /dev/null | xargs swaymsg exec --
    bindsym $mod+t exec alacritty
    bindsym $mod+e exec gnvim
    bindsym $mod+b exec firefox
    bindsym $mod+f exec thunar

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

# System Control
    bindsym $mod+c exec grimshot copy area
    bindsym Print exec grimshot copy area
    bindsym Control+Print exec grimshot copy output
    bindsym $mod+Control+c exec grimshot copy output

    bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+
    bindsym XF86AudioLowerVolume exec amixer sset Master 5%-
    bindsym XF86AudioMute exec amixer sset Master toggle
    bindsym Control+XF86AudioRaiseVolume exec amixer sset Capture 5%+
    bindsym Control+XF86AudioLowerVolume exec amixer sset Capture 5%-
    bindsym Control+XF86AudioMute exec amixer sset Capture toggle

    bindsym XF86AudioPlay exec playerctl play-pause
    bindsym XF86AudioNext exec playerctl next
    bindsym XF86AudioPrev exec playerctl prev

    bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
    bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

    bindsym XF86Display exec wdisplays

# Exit
set $mode_system System (l) lock, (s) suspend, (r) reboot, (q) exit sway
mode "$mode_system" {
    bindsym l exec --no-startup-id $lock; mode "default"
    bindsym s exec --no-startup-id systemctl suspend; mode "default"
    bindsym r exec --no-startup-id systemctl reboot
    bindsym q exit

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# Moving around
    focus_wrapping workspace

    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Move the focused window between outputs
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

    # Move your focus between outputs
    bindsym $mod+Control+$left focus output left
    bindsym $mod+Control+$down focus output down
    bindsym $mod+Control+$up focus output up
    bindsym $mod+Control+$right focus output right
    # Move your workspaces around between outputs
    bindsym $mod+Control+Shift+$left move workspace to left
    bindsym $mod+Control+Shift+$down move workspace to down
    bindsym $mod+Control+Shift+$up move workspace to up
    bindsym $mod+Control+Shift+$right move workspace to right

    # Focus on the most recent urgent window
    bindsym $mod+u [urgent=newest] focus

# Workspaces
    # Switch to workspace
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $mod+0 workspace 10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $mod+Shift+0 move container to workspace 10

# Layout stuff
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+s splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+Control+s layout stacking
    bindsym $mod+Control+w layout tabbed
    bindsym $mod+Control+e layout toggle split
    workspace_layout tabbed

    # Move focus to the parent container
    bindsym $mod+p focus parent
    bindsym $mod+n focus child

    # Make the current focus fullscreen
    bindsym $mod+z fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

# Scratchpad
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad
    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

# Resizing containers
mode "resize" {
    # TODO: Add moving the window around

    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Status Bar
bar {
    position top
    status_command i3status
    tray_output *
}
