# CPU usage
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
# [cpu_usage]
# label=CPU
# interval=30
# min_width=CPU 100.00%

# Network monitoring
# [iface]
# interval=30
# separator=false
# [bandwidth2]
# interval=persist
# markup=pango
# [wifi]
# INTERFACE=wlp4s0
# label=wifi:
# interval=10

# Since i3blocks v1.4 doesn't support envars in blocks, I have to use the
# script which is gross
# Battery indicator
[battery]
command=BAT_NUMBER=0 ~/.config/i3blocks/contrib/battery/battery
label=BAT0
interval=30
# BAT_NUMBER=0
[battery]
command=BAT_NUMBER=1 ~/.config/i3blocks/contrib/battery/battery
label=BAT1
interval=30
# BAT_NUMBER=1

# Date Time
[time]
command=date '+%Y-%m-%d %H:%M'
interval=10

